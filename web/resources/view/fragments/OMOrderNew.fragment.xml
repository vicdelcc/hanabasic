<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Panel headerText="Bestellerfassung" class="sapUiResponsiveMargin">
		<content>
			<Label text="BID" labelFor="iBID"/>
			<Input id="iBID" type="Text" class="sapUiSmallMarginBottom" value="{o>/BID}"/>
			<Label text="Bestelldatum" labelFor="iBestelldatum"/>
			<Input id="iBestelldatum" type="Text" class="sapUiSmallMarginBottom" value="{o>/Bestelldatum}"/>
			<Button text="Anlegen" press="onCreateOrder"/>
		</content>
	</Panel>
</core:FragmentDefinition>